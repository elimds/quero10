<div class="well no-padding">
    <%%= form_for(@<%= singular_table_name %>, :html => { class: 'form-horizontal' }) do |f| %>
        
        <%% if @<%= singular_table_name %>.errors.any? %>
            <div class="alert alert-error">
                <h4><%%= pluralize(@<%= singular_table_name %>.errors.count, "error") %> prohibited this pessoa from being saved:</h4>
                <ul>
                    <%% @<%= singular_table_name %>.errors.full_messages.each do |message| %>
                        <li><%%= message %></li>
                    <%% end %>
                </ul>
            </div>
        <%% end %>

        <% attributes.each do |attribute| -%>
            <div class="control-group span6 no-margin-left">
                <%%= f.label :<%= attribute.name %>, class: 'control-label' %>
                <div class="controls">
                    <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, required: true, class: 'input-block-level' %>
                </div>
            </div>
        <% end -%>
    
        <div class="clearfix"></div>
        <div class="form-actions">
            <%%= f.submit ( f.object.new_record? ? "Cadastrar" : "Atualizar"), class: "btn btn-primary" %>
        </div>
    <%% end %>
</div>

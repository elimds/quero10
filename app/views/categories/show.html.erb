<div class="row-fluid">
    <div class="span12">
        <div class="top-bar">
            <h3><i class="icon-list-alt"></i> Visualizar Categoria</h3>
        </div>
        <div class="well no-padding">
            <% unless notice.nil? %>
                <div class="alert"><%= notice %></div>
            <% end %>
                            <div class="control-group span12 no-margin-left">
                    <label class="control-label">Título:</label>
                    <div class="controls">
                        <%= @category.title %>
                    </div>
                </div>
                            <div class="control-group span12 no-margin-left">
                    <label class="control-label">Descrição:</label>
                    <div class="controls">
                        <%= @category.description %>
                    </div>
                </div>
                            <div class="control-group span12 no-margin-left">
                    <label class="control-label">Instituição:</label>
                    <div class="controls">
                        <%= @category.institute.name %>
                    </div>
                </div>
                    </div>
    </div>
</div>

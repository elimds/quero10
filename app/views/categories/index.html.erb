<div class="row-fluid link-cadastro">
    <%= link_to new_category_path do %>
        <i class="icon-plus"></i> Adicionar categoria
    <% end %>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="top-bar">
            <h3><i class="icon-th-list"></i> Lista de Categorias</h3>
        </div>
        <div class="well no-padding">
            <table class="data-table">
                <thead>
                    <tr>
                                                    <th>Codigo</th>
                                                    <th>Titulo</th>
                                                    <th>Descricao</th>
                                                <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                        <tr>
                                                            <td><%= category.codigo %></td>
                                                            <td><%= category.titulo %></td>
                                                            <td><%= category.descricao %></td>
                                                        <td><%= link_to 'Visualizar', category %></td>
                            <td><%= link_to 'Editar', edit_category_path(category) %></td>
                            <td><%= link_to 'Deletar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

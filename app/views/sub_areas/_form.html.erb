<div class="well no-padding">
    <%= form_for(@sub_area, :html => { class: 'form-horizontal' }) do |f| %>
        
        <% if @sub_area.errors.any? %>
            <div class="alert alert-error">
                <h4><%= pluralize(@sub_area.errors.count, "error") %> prohibited this pessoa from being saved:</h4>
                <ul>
                    <% @sub_area.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

            <div class="control-group span6 no-margin-left">
                <%= f.label :title, 'Título:', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :title, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span6">
                <%= f.label :area, 'Área:', class: 'control-label' %>
                <div class="controls">
                    <%= f.select :area_id, options_for_select(Area.all.map{|s|[s.title, s.id]}, :selected => @sub_area.area_id), {:include_blank => '- Selecione -'}, { :class => 'span12', :required => true } %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <%= f.label :code_capes, 'Código Capes:', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :code_capes, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <%= f.label :description, 'Descrição:', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_area :description, required: true, class: 'input-block-level' %>
                </div>
            </div>
            
        <div class="clearfix"></div>
        <div class="form-actions">
            <%= f.submit ( f.object.new_record? ? "Cadastrar" : "Atualizar"), class: "btn btn-primary" %>
        </div>
    <% end %>
</div>

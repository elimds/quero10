                <div class="alert"><%= notice %></div>
            <% end %>
                            <div class="control-group span12 no-margin-left">
                    <label class="control-label">Codigo:</label>
                    <div class="controls">
                        <%= @sub_area.codigo %>
                    </div>
                </div>
                            <div class="control-group span12 no-margin-left">
                    <label class="control-label">Descricao:</label>
                    <div class="controls">
                        <%= @sub_area.descricao %>
                    </div>
                </div>
                            <div class="control-group span12 no-margin-left">
                    <label class="control-label">Area:</label>
                    <div class="controls">

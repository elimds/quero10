<div class="row-fluid">
    <div class="span12">
        <div class="top-bar">
            <h3><i class="icon-list-alt"></i> Visualizar Sub Área</h3>
        </div>
        <div class="well no-padding">
            <% unless notice.nil? %>
                <div class="alert"><%= notice %></div>
            <% end %>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Código Capes:</label>
                    <div class="controls">
                        <%= @sub_area.code_capes %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Título:</label>
                    <div class="controls">
                        <%= @sub_area.title %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Descrição:</label>
                    <div class="controls">
                        <%= @sub_area.description %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Área:</label>
                    <div class="controls">
                        <%= @sub_area.area.title %>
                    </div>
                </div>
            </div>
    </div>
</div>

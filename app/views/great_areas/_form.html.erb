<div class="well no-padding">
    <%= form_for(@great_area, :html => { class: 'form-horizontal' }) do |f| %>
        
        <% if @great_area.errors.any? %>
            <div class="alert alert-error">
                <h4><%= pluralize(@great_area.errors.count, "error") %> prohibited this pessoa from being saved:</h4>
                <ul>
                    <% @great_area.errors.full_messages.each do |message| %>
                        <li><%= message %></li>

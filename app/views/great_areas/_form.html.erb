                    <%= f.text_area :description, required: true, class: 'input-block-level' %>
                </div>
            </div>
            
        <div class="clearfix"></div>
        <div class="form-actions">
            <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>

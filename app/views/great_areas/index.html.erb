<div class="row-fluid link-cadastro">
    <%= link_to new_great_area_path do %>
        <i class="icon-plus"></i> Adicionar Grande Área
    <% end %>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="top-bar">
            <h3><i class="icon-th-list"></i> Lista de Grandes Áreas</h3>
        </div>
        <div class="well no-padding">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Código Capes</th>
                        <th>Título</th>
                        <th>Descrição</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @great_areas.each do |great_area| %>
                        <tr>
                            <td><%= great_area.code_capes %></td>
                            <td><%= great_area.title %></td>
                            <td><%= great_area.description %></td>
                            <td><%= link_to 'Visualizar', great_area %></td>
                            <td><%= link_to 'Editar', edit_great_area_path(great_area) %></td>
                            <td><%= link_to 'Deletar', great_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

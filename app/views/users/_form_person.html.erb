<div class="well no-padding">
    <%= form_for(@person, :url => user_create_person_path, :html => { class: 'form-horizontal' }) do |f| %>
        
        <% if @person.errors.any? %>
            <div class="alert alert-error">
                <h4><%= pluralize(@person.errors.count, "error") %> não foi possível salvar este registro:</h4>
                <ul>
                    <%= @person.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

            <div class="control-group span6 no-margin-left">
                <%= f.label :name, 'Nome:', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :name, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span6">
                <%= f.label :email, 'E-mail', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :email, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span6 no-margin-left">
                <%= f.label :lattes, 'Lattes:', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :lattes, required: true, class: 'input-block-level' %>
                </div>
            </div>
                    <div class="control-group span3">
                <%= f.label :phone, 'Telefone:', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :phone, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span3">
                <%= f.label :mobile_phone, 'Celular:', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :mobile_phone, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-actions">
                <%= f.submit ( f.object.new_record? ? "Enviar" : "Atualizar"), class: "btn btn-primary" %>
            </div>
    <% end %>
</div>

<div class="well no-padding">
    <%= form_for(@user, :html => { class: 'form-horizontal' }) do |f| %>
        
        <% if @user.errors.any? %>
            <div class="alert alert-error">
                <h4><%= pluralize(@user.errors.count, "erro") %> durante o cadastro:</h4>
                <ul>
                    <%= @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

            <div class="control-group span6 no-margin-left">
                <%= f.label :login, 'Login:', class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :login, required: true, class: 'input-block-level' %>
                </div>
            </div>
                    <div class="control-group span3">
                <%= f.label :password, 'Senha:', class: 'control-label' %>
                <div class="controls">
                    <%= f.password_field :password, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span3">
                <%= f.label :password_confirmation, 'Confirme a senha:', class: 'control-label' %>
                <div class="controls">
                    <%= f.password_field :password_confirmation, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-actions">
                <%= f.submit ( f.object.new_record? ? "Cadastrar" : "Atualizar"), class: "btn btn-primary" %>
            </div>
    <% end %>
</div>

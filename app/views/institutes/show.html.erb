<div class="row-fluid">
    <div class="span12">
        <div class="top-bar">
            <h3><i class="icon-list-alt"></i> Visualizar Instituição</h3>
        </div>
        <div class="well no-padding">
            <% unless notice.nil? %>
                <div class="alert"><%= notice %></div>
            <% end %>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">Nome:</label>
                <div class="controls">
                    <%= @institute.name %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">Endereço:</label>
                <div class="controls">
                    <%= @institute.address %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">Número:</label>
                <div class="controls">
                    <%= @institute.number %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">Bairro:</label>
                <div class="controls">
                    <%= @institute.district %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">Cidade:</label>
                <div class="controls">
                    <%= @institute.city %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">Estado:</label>
                <div class="controls">
                    <%= @institute.state.name %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">CEP:</label>
                <div class="controls">
                    <%= @institute.zip_code %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">Telefone:</label>
                <div class="controls">
                    <%= @institute.phone %>
                </div>
            </div>
            <div class="control-group span12 no-margin-left">
                <label class="control-label">Responsável:</label>
                <div class="controls">
                    <%= @institute.person.name %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="well no-padding">
    <%= form_for(@institute, :html => { class: 'form-horizontal' }) do |f| %>
        
        <% if @institute.errors.any? %>
            <div class="alert alert-error">
                <h4><%= pluralize(@institute.errors.count, "error") %> prohibited this pessoa from being saved:</h4>
                <ul>
                    <%= @institute.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

            <div class="control-group span5 no-margin-left">
                <%= f.label :name, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :name, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span4">
                <%= f.label :address, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :address, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span3">
                <%= f.label :number, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :number, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span5 no-margin-left">
                <%= f.label :district, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :district, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span4">
                <%= f.label :city, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :city, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span3">
                <%= f.label :state, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :state, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span3 no-margin-left">
                <%= f.label :zip_code, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :zip_code, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span3">
                <%= f.label :phone, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :phone, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="control-group span6">
                <%= f.label :person, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :person, required: true, class: 'input-block-level' %>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-actions">
                <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
            </div>
    <% end %>
</div>

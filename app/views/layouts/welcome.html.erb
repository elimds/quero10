<!DOCTYPE html>
<html>
<head>
  <title>.:: Quero 10 ::.</title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style type="text/css">
  	.welcome {
	    margin-top: 50px;
	}
	
	.navbar .nav > li {
	    padding: 20px 5px 10px;
	}
	
	.navbar .nav > li input {
	    width: 160px;
	}
	
	.navbar .nav > li a.cadastro {
	    padding: 0 !important;
	    font-size: 25px;
	    color: #279b07;
	}
	
	.navbar .nav > li a.cadastro i {
	    font-size: 29px;
	    color: #279b07;
	}
	
	.errorlogin {
	    text-align: right;
	    color: #fff;
	    text-shadow: none;
	}
  </style>
</head>
<body>

  <!-- Top Fixed Bar -->
	<div class="navbar navbar-inverse navbar-fixed-top">

		<!-- Top Fixed Bar: Navbar Inner -->
		<div class="navbar-inner">

			<!-- Top Fixed Bar: Container -->
			<div class="container">

				<% unless current_user %>
				<%= form_for(:session, url: login_path) do |f| %>
				<ul class="nav pull-right">
					<li class="dropdown">
						<a href="/signup" class="cadastro">
							<i class="icon-edit icon-white"></i> 
							<span>Cadastre-se!</span>
						</a>
					</li>
					<li class="dropdown">
						<%= f.text_field :login, :placeholder => "Login" %> 
					</li>
					<li class="dropdown">
						<%= f.password_field :password, :placeholder => "Senha" %> 
					</li>
					<li class="dropdown">
						<%= f.submit "Entrar", :class => 'btn btn-primary', :style => 'margin:0px; width: 70px;' %>
					</li>
				</ul>
				<% end %>
				<% else %>
				<ul class="nav pull-right">
					<li>
						<%= link_to calendar_path do %>
						<i class="icon-align-justify icon-white"></i>
						<span class="hidden-phone">Dashboard</span>
						<% end %>
					</li>
					<li class="dropdown">
						<a href="<%= edit_person_path(current_user.person) %>">
							<i class="icon-user icon-white"></i> 
							<span class="hidden-phone"><% if current_user %><%= current_user.person.name %><% end %></span>
						</a>
					</li>
					<li>
						<%= link_to logout_path,  method: "delete" do %>
						<i class="icon-off icon-white"></i>
						<span class="hidden-phone">Logout</span>
						<% end %>
					</li>
				</ul>
				<% end %>
        <% if flash[:error] %>
        		<div class="clearfix"></div>
            <div class="errorlogin"><%= flash[:error] %></div>
        <% end %>
				
			</div>
			<!-- / Top Fixed Bar: Container -->

		</div>
		<!-- / Top Fixed Bar: Navbar Inner -->

	</div>
	<!-- / Top Fixed Bar -->
	
	<!-- Content Container -->
	<div class="container">
	  
    <%= yield %>
    
  </div>
  <!-- / Content Container -->
  
  <!-- Footer -->
	<footer class="footer">

			<!-- Footer Container -->
      <div class="container">
        <p>Projetos de Pesquisa Quero 10</p>
        <p>Github: <a href="https://github.com/elimds/quero10">https://github.com/elimds/quero10</a></p>
      </div>
      <!-- / Footer Container -->

	</footer>
	<!-- / Footer -->

</body>
</html>

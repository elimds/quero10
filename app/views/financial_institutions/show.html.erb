<div class="row-fluid">
    <div class="span12">
        <div class="top-bar">
            <h3><i class="icon-list-alt"></i> Visualizar Instituição de Fomento</h3>
        </div>
        <div class="well no-padding">
            <% unless notice.nil? %>
                <div class="alert"><%= notice %></div>
            <% end %>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Nome:</label>
                    <div class="controls">
                        <%= @financial_institution.name %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Endereço:</label>
                    <div class="controls">
                        <%= @financial_institution.address %>, <%= @financial_institution.number %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Bairro:</label>
                    <div class="controls">
                        <%= @financial_institution.district %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Cidade:</label>
                    <div class="controls">
                        <%= @financial_institution.city %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Estado:</label>
                    <div class="controls">
                        <%= @financial_institution.state.name %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">CEP:</label>
                    <div class="controls">
                        <%= @financial_institution.zip_code %>
                    </div>
                </div>
                <div class="control-group span12 no-margin-left">
                    <label class="control-label">Responsável:</label>
                    <div class="controls">
                        <%= @financial_institution.person.name %>
                    </div>
                </div>
                    </div>
    </div>
</div>

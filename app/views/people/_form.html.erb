<div class="well no-padding">
    <%= form_for(@person, :html => { class: 'form-horizontal' }) do |f| %>
        
        <% if @person.errors.any? %>
            <div class="alert alert-error">
                <h4><%= pluralize(@person.errors.count, "error") %> prohibited this pessoa from being saved:</h4>
                <ul>
                    <%= @person.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

                    <div class="control-group span6 no-margin-left">
                <%= f.label :name, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :name, required: true, class: 'input-block-level' %>
                </div>
            </div>
                    <div class="control-group span6 no-margin-left">
                <%= f.label :email, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :email, required: true, class: 'input-block-level' %>
                </div>
            </div>
                    <div class="control-group span6 no-margin-left">
                <%= f.label :lattes, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :lattes, required: true, class: 'input-block-level' %>
                </div>
            </div>
                    <div class="control-group span6 no-margin-left">
                <%= f.label :phone, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :phone, required: true, class: 'input-block-level' %>
                </div>
            </div>
                    <div class="control-group span6 no-margin-left">
                <%= f.label :mobile_phone, class: 'control-label' %>
                <div class="controls">
                    <%= f.text_field :mobile_phone, required: true, class: 'input-block-level' %>
                </div>
            </div>
            
        <div class="form-actions">
            <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>
